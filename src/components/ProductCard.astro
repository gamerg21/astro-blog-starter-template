---
export interface Props {
  image: string;
  name: string;
  description: string;
  price: string;
}
const { image, name, description, price } = Astro.props;
---
<div class="product-card">
  <img src={image} alt={name} class="product-image" />
  <h2 class="product-name">{name}</h2>
  <p class="product-description">{description}</p>
  <div class="product-price">{price}</div>
</div>
<style>
.product-card {
  background: #fff;
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  padding: 1rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: box-shadow 0.2s;
}
.product-card:hover {
  box-shadow: 0 4px 16px rgba(0,0,0,0.12);
}
.product-image {
  width: 100%;
  max-width: 200px;
  border-radius: 0.5rem;
  object-fit: cover;
}
.product-name {
  margin: 0.5rem 0 0.25rem 0;
  font-size: 1.25rem;
}
.product-description {
  font-size: 1rem;
  color: #555;
  margin-bottom: 0.5rem;
  text-align: center;
}
.product-price {
  font-weight: bold;
  color: #1a8917;
  font-size: 1.1rem;
}
</style> 